<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rainbowdish"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.RainbowDish"
        android:supportsRtl="true"
        android:windowAnimationStyle="@android:style/Animation.Translucent"
        >

    <activity
        android:name=".MainActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
        <activity android:name=".screens.ProductsShow">

            <!-- Опционально, можно указать, чтобы эта активность запускалась первым экраном -->
            <!-- <intent-filter> ... </intent-filter> -->
        </activity>

        <!-- Другие активности -->
        <activity android:name=".screens.ParametrsShow" />
        <activity android:name=".screens.StatsShow"
            tools:ignore="Instantiatable" />
        <activity android:name=".screens.RecipesShow"
            tools:ignore="Instantiatable" />
        <activity android:name=".RecipeShowPage">
            <!-- Optional: Intent filters, launch mode, etc. -->
        </activity>
        <activity android:name=".screens.ProductAdd" />
        <activity android:name=".screens.ParametrsAdd" />
    </application>


</manifest>